<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@project.errors.count, "error") %> prevent this project from saving:</h2>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, :class => 'form-control', :placeholder => 'Title' %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :description %>
      <%= f.text_area :description, :class => 'form-control', :placeholder => 'Description' %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :link %>
      <%= f.text_field :link, :class => 'form-control', :placeholder => 'Link' %>
    </div>
  </div>
  <br>
  <div id="success"></div>
  <div class="row">
      <div class="form-group col-xs-12">
        <%= f.submit "Create Project", :class => "btn btn-success btn-lg" %>
      </div>
  </div>
<% end %>