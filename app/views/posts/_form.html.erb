<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> prevent this post from saving:</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, :class => 'form-control', :placeholder => 'Title' %>
    </div>
  </div>
  <div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :content %>
      <%= f.text_area :content, :class => 'form-control', :placeholder => 'Content' %>
    </div>
  </div>
  <br>
  <div id="success"></div>
  <div class="row">
      <div class="form-group col-xs-12">
        <%= f.submit "Create Post", :class => "btn btn-success btn-lg" %>
      </div>
  </div>
<% end %>