<section id="post">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2><%= @post.title %></h2>
				<p class="date"><%= @post.created_at.strftime("%A, %b, %d") %></p>
        <hr class="star-primary">
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2">
				<div class="article">
					<%= markdown @post.content%>										
				</div>
				<% if user_signed_in? %>
					<div class="admin-links">
						<%= link_to "Edit", edit_post_path(@post) %>
						<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
					</div>
				<% end %>
			</div>			
		</div>
		<hr class="content-divider">						
		<div class="row">
			<div class="col-lg-12 text-center">
				<p>Share <%= @post.title %></p>
				<!-- Twitter -->
				<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @jeffasch - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200 left=300');void(0);" class="btn-social"><i class="fa fa-fw fa-twitter"></i></a>
				<!-- Facebook -->
				<a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200 left=300');void(0);" class="btn-social"><i class="fa fa-facebook"></i></a>
				<!-- Google Plus -->
				<a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200 left=300');void(0);" class="btn-social"><i class="fa fa-google-plus"></i></a>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 col-lg-offset-2">
				<%= render 'disqus' %>
			</div>
		</div>
	</div>
</section>

