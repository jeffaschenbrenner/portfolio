<!-- Header -->
<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="/assets/profile.png" alt="">
                <div class="intro-text">
                    <span class="name">Jeff Aschenbrenner</span>
                    <hr class="star-light">
                    <span class="skills">Web Developer</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- About Section -->
<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>About</h2>
                <hr class="star-primary">                
            </div>
            <div class="col-lg-6 col-lg-offset-3">
                <p>Hey, I'm Jeff! I am a full stack developer living in Plano, Texas.</p>
                <p>I am constantly improving my knowledge in web technologies and am currently sharpening my skills in the <a href="#">Ruby on Rails framework</a> to facilitate the creation of amazing applicaitons.</p>
                <p>You can follow my random interests and thoughts on twitter and see some of my code on Github.</p>
            </div>
        </div>
    </div>
</section>

<!-- Portfolio / Blog Section -->
<section class="success" id="portfolio-blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 text-center">
                <h2>Portfolio</h2>
                <hr class="star-light">
                <% @projects.each do |project| %>
                    <div class="row text-center">
                        <div class="col-lg-12">
                            <h3><%= link_to project.title, project %></h3>
                            <p class="date"><%= project.created_at.strftime("%A, %b, %d") %></p>
                        </div>      
                    </div>
                <% end %>
            </div>
            <div class="col-lg-6 text-center">
                <h2>Blog</h2>
                <hr class="star-light">
                <% @posts.each do |post| %>
                    <div class="row text-center">
                        <div class="col-lg-12">
                            <h3><%= link_to post.title, post %></h3>
                            <p class="date"><%= post.created_at.strftime("%A, %b, %d") %></p>
                        </div>      
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Contact Me</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <%= form_for @contact do |f| %>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.label :name %>
                        <%= f.text_field :name, required: true, :class => "form-control", :placeholder => "Name" %>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.label :email %>
                        <%= f.email_field :email, required: true, :class => "form-control", :placeholder => "Email" %>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <%= f.label :message %>
                        <%= f.text_area :message, as: :text, :class => "form-control", :placeholder => "Message" %>
                    </div>
                </div>
                <div class="hidden">
                    <%= f.label :nickname %>
                    <%= f.text_field :nickname, hint: 'leave this field blank' %>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <%= f.submit 'Send Message', :class => "btn btn-success btn-lg" %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>